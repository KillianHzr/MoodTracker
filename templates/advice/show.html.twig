{% extends 'admin/base.html.twig' %}

{% block title %}Advice{% endblock %}

{% block body %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">
            <h1 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Advice Details</h1>

            <div class="mt-6 bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                <table class="w-full text-sm text-left text-gray-500">
                    <tbody>
                    <tr>
                        <th class="px-6 py-4 font-medium text-gray-900">Id</th>
                        <td class="px-6 py-4">{{ advice.id }}</td>
                    </tr>
                    <tr class="bg-gray-50">
                        <th class="px-6 py-4 font-medium text-gray-900">Mood Level</th>
                        <td class="px-6 py-4">{{ advice.moodLevel }}</td>
                    </tr>
                    <tr>
                        <th class="px-6 py-4 font-medium text-gray-900">Email Template</th>
                        <td class="px-6 py-4">{{ advice.emailTemplate }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="mt-6 flex justify-between">
                    <a href="{{ path('app_advice_index') }}" class="font-semibold leading-6 text-blue-500 hover:text-blue-400">Back to list</a>
                    <div class="flex gap-3">
                        <a href="{{ path('app_advice_edit', {'id': advice.id}) }}" class="inline-flex justify-center rounded-md bg-yellow-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-yellow-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-500">Edit</a>
                        {{ include('advice/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
